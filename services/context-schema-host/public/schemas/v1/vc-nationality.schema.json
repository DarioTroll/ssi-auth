{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://localhost:3000/schemas/v1/vc-nationality.schema.json",
  "title": "NationalityCredential (Extension)",
  "allOf": [
    { "$ref": "https://localhost:3000/schemas/v1/vc-base.schema.json" },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string" },
          "contains": { "const": "NationalityCredential" }
        },
        "credentialSubject": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/DID" },
            "countryCode": { "type": "string", "pattern": "^[A-Z]{2}$" },
            "countryName": { "type": "string", "minLength": 1 }
          },
          "required": ["countryCode"]
        }
      }
    }
  ]
}
