{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://localhost:3000/schemas/v1/vc-age-over.schema.json",
  "title": "AgeOverCredential (Extension)",
  "allOf": [
    { "$ref": "https://localhost:3000/schemas/v1/vc-base.schema.json" },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string" },
          "contains": { "const": "AgeOverCredential" }
        },
        "credentialSubject": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/DID" },
            "ageThreshold": { "type": "integer", "minimum": 0, "multipleOf": 1 }
          },
          "required": ["ageThreshold"]
        }
      }
    }
  ]
}
