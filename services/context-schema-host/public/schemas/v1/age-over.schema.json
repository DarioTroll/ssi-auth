{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://localhost:3000/schemas/v1/age-over.schema.json",
  "title": "AgeOverCredential",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@context": {
      "oneOf": [
        { "type": "string" },
        { 
          "type": "array",
          "minItems": 1,
          "items": { "type": ["string", "object"] }
        }
      ]
    },
    "type": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" },
      "contains": { "const": "AgeOverCredential" }
    },
    "credentialSubject": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ageThreshold": { "type": "integer", "minimum": 0, "multipleOf": 1 }
      },
      "required": ["ageThreshold"]
    }
  },
  "required": ["@context", "type", "credentialSubject"]
}
