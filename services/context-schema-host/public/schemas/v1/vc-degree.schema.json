{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://localhost:3000/schemas/v1/vc-degree.schema.json",
  "title": "DegreeCredential (Extension)",
  "allOf": [
    { "$ref": "https://localhost:3000/schemas/v1/vc-base.schema.json" },
    {
      "type": "object",
      "properties": {
        "type": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "string" },
          "contains": { "const": "DegreeCredential" }
        },
        "credentialSubject": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "id": { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/DID" },
            "degree": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "degreeType": {
                  "type": "string",
                  "enum": ["Laurea", "Laurea Magistrale", "Bachelor", "Master", "PhD"]
                },
                "fieldOfStudy": { "type": "string", "minLength": 2 },
                "university": { "type": "string", "minLength": 2 },
                "graduationDate": {
                  "type": "string",
                  "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
                },
                "grade": { "type": "string" },
                "honors": { "type": "boolean" }
              },
              "required": ["degreeType", "fieldOfStudy", "university", "graduationDate"]
            }
          },
          "required": ["degree"]
        }
      }
    }
  ]
}
