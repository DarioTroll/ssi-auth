{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://localhost:3000/schemas/v1/vc-base.schema.json",
  "title": "Verifiable Credential (Base)",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "@context": { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/Context" },
    "id": { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/URI" },
    "type": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" },
      "contains": { "const": "VerifiableCredential" }
    },
    "issuer": {
      "oneOf": [
        { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/DID" },
        {
          "type": "object",
          "additionalProperties": true,
          "properties": { "id": { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/DID" } },
          "required": ["id"]
        }
      ]
    },
    "issuanceDate": { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/ISODateTime" },
    "expirationDate": { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/ISODateTime" },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "id": { "$ref": "https://localhost:3000/schemas/v1/defs/common.schema.json#/$defs/DID" }
      }
    },
    "credentialStatus": { "$ref": "https://localhost:3000/schemas/v1/defs/statuslist2021.schema.json" },
    "proof": { "$ref": "https://localhost:3000/schemas/v1/vc-proof-di.schema.json" }
  },
  "required": ["@context", "type", "issuer", "issuanceDate", "credentialSubject"]
}
